- if comment.persisted?
  %a{:name => "comment_#{comment.id}"}
  .comment.round-5{:id => "comment_#{comment.id}"}
    %p= comment.text
    - unless comment.website.empty?
      %strong= (link_to "#{comment.signature}", comment.website) + ','
    - else
      %strong= comment.signature
    = "#{comment.ip},"
    %span.timestamps= l(comment.created_at, format: :long) + "."
    - unless comment.website.empty?
      Web:
      = link_to comment.website, comment.website
    - if logged_in?
      = link_to "Delete", comment, method: :delete, :confirm => "Are you sure you want to delete this comment?", :class => "btn__delete", :id => "delete_comment"
