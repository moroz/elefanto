- if comment.persisted?
  %a{:name => dom_id(comment)}
  .comment.round-5{:id => dom_id(comment)}
    %p= comment.text
    %strong= comment.signature
    = "from #{comment.ip}, on"
    %span.timestamps= l(comment.created_at, format: :long) + "."
    - if comment.website.present?
      Web:
      = link_to comment.website, comment.website
    - if logged_in?
      = link_to "Delete", comment, method: :delete, :confirm => "Are you sure you want to delete this comment?", class: "btn__delete", id: "delete_comment_#{comment.id}"
