%br
- if params[:post_lang]
  = link_to t('post.show_all_lang'), {lang: nil, page: params[:page]}, class: 'btn btn-primary'
- else
  %strong= t('post.show_only_lang')
  = link_to t('en'), {:post_lang => "en"}, class: 'btn btn-primary'
  = link_to t('pl'), {:post_lang => "pl"}, class: 'btn btn-success'
  = link_to t('zh'), {:post_lang => "zh"}, class: 'btn btn-danger'
